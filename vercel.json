{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "crons": [
    {
      "path": "/api/email/reminder",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/notifications/mid-week",
      "schedule": "0 12 * * 3"
    },
    {
      "path": "/api/cron/push-reminders",
      "schedule": "0 * * * *"
    }
  ]
}
